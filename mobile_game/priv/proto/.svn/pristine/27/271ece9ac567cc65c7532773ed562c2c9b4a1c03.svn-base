#发起挑战
proto MSG_ARENA_DUEL=121
{
    client{
        message{
            playerId:u64
        }
    }
    server{}
}

#接收到挑战
proto MSG_ARENA_RECEIVE_DUEL=122
{
    client{
        message{
            playerId:u64,
            isArgee:u8      #0同意 1拒绝
        }
    }
    server{
        message{
            playerId:u64,
            playerName:sstr
        }
    }
}

#挑战回复结果
proto MSG_ARENA_DUEL_RET=123
{
    client{}
    server
    {
        message{
            playerId:u64,
            playerName:sstr,
            replyNum:reply_num
            #code:u8     #0双方开始挑战， 1对方拒绝， 2对方当前无法切磋，3已经申请了 255未知
        }
    }
}
