proto MSG_PET_NEW_UPGRADE=2
{
	client{
		message{
			id:u32,
			chongwudanid:u32,
			num:u8
		}
	}

	server{
		message{
			id:u32,
			level:u8,
			exp:u64
		}
	}
}

proto MSG_PET_NEW_ADVANCE=3
{
	client{
		message{
			id:u32
		}
	}

	server{
		message{
			id:u32,
			advance:u8
		}
	}

	errnos{
		ERR_COST_NOT_ENOUGH,
		ERR_PET_CANT_ADVANCE, ##宠物不能进阶
		ERR_PET_NOT_EXIST##寵物不存在
    }
}

