## 坐骑激活
proto MSG_RIDE_ACTIVATE = 4
{
    client{
        message{
            ride_id:ride_id
        }
    }

    server{
        message{
            ride_id:ride_id
        }
    }

    errnos{
    	ERR_RIDE_NO_THIS_RIDE,
    	ERR_RIDE_NO_ENOUGH
	}
}

## 坐骑进化
proto MSG_RIDE_EVOLVE = 5
{
    client{
        message{
            ride_id:ride_id
        }
    }
    server{
        message{
            ride_id:ride_id, ##坐骑id
            level:u8         ##等级
        }
    }

    errnos{
    	ERR_RIDE_NO_ENOUGH
	}
}

## 兽魂升级
proto MSG_RIDE_UPLEVEL = 6
{
    client{
        message=empty
    }
    server{
        message{
            exp:u16,    ##经验
            level:u8   ##等级
        }
    }
}

## 兽魂突破
proto MSG_RIDE_ADVANCE = 7
{
    client{
        message=empty
    }
    server{
        message{
            grade:u16   ##突破等级
        }
    }
}


## 兽魂转化
proto MSG_RIDE_CHANGE = 8
{
    client{
        message=empty
    }
    server{
        message{
            prizeInfo:list<{itemId:u32, itemCount:u32}>, ## 兽魂吃撑吐出奖励
            out_cd:u32,             ## 兽魂吐出奖励的cd
            out_num:u8              ## 每天喷吐剩余次数
        }
    }
}

## 兽魂喂养
proto MSG_RIDE_FEED = 9
{
    client{
        message=empty
    }
    server{
        message{
            happy:u16   ##愉悦值
        }

   }

}

## 坐骑乘骑
proto MSG_RIDE_TORIDE = 10
{
    client{
        message{
            rideId:u16                  ## 坐骑ID
        }
    }

    server{
        message{
            rideId:u16                  ## 坐骑ID
        }
    }

}

## 兽魂愉悦度衰减推送
proto MSG_RIDE_HAPPY = 11
{
    client{
        message=empty
    }
    server{
        message{
            happy:u16   ##愉悦值
        }
   }
}
