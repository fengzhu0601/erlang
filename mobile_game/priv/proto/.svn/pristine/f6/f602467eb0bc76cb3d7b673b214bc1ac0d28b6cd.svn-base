@include "game.sproto"

## 坐骑信息
struct ride_info
{
    ride_id:ride_id,              ## 坐骑配置Id
    level:u8                      ## 坐骑等级
}

## 兽魂信息
struct ride_soul_info
{
    id:ride_id,         ## 兽魂配置id
    exp:u16,            ## 兽魂当前经验
    happy:u16,          ## 兽魂当前愉悦度
    grade:u16,          ## 突破等级
    out_cd:u32,         ## 兽魂吐出奖励的cd
    out_num:u8          ## 每天喷吐剩余次数
}

## 坐骑列表
proto MSG_RIDE_LIST=1
{
    client{
    	message=empty
    }

    server{
        message {
            ride_list:list<ride:ride_info>
        }
    }
}

## 根据坐骑ID获取坐骑信息
proto MSG_RIDE_DATA = 2
{
    client{
        message{
            ride_id:ride_id
        }
    }

    server{
        message{
            ride:ride_info
        }
    }
}

## 获取兽魂信息
proto MSG_RIDE_SOUL_DATA = 3
{
    client{
        message=empty
    }

    server{
        message{
            ride_soul:ride_soul_info
        }
    }
}

